{
  "manifest_version": 3,
  "name": "wplacer",
  "version": "2.0",
  "description": "Automatically sends session and Turnstile tokens from wplace.live to wplacer.",
  "permissions": [
    "cookies",
    "tabs",
    "scripting",
    "alarms",
    "storage"
  ],
  "host_permissions": [
    "https://wplace.live/",
    "https://backend.wplace.live/",
    "http://127.0.0.1:80/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/favicon-16x16.png",
      "32": "icons/favicon-32x32.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://wplace.live/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
